{
	"name": "@idee/typewriter",
	"description": "A WordPress framework by IdeeMedia.",
	"private": true,
	"homepage": "https://github.com/basmilius/typewriter#readme",
	"version": "1.0.0",
	"license": "MIT",
	"author": {
		"name": "Bas Milius",
		"email": "bas@mili.us",
		"url": "https://bas.dev"
	},
	"keywords": [
		"WordPress",
		"Framework",
		"TypeWriter",
		"Identity",
		"IdeeMedia"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/basmilius/typewriter.git"
	},
	"bugs": {
		"url": "https://github.com/basmilius/typewriter/issues"
	},
	"main": "public/index.php",
	"scripts": {
		"build": "concurrently \"yarn run clean\" \"yarn run typewriter:build\"",
		"clean": "concurrently \"yarn run typewriter:clean\"",
		"dev": "concurrently \"yarn run serve\" \"yarn run typewriter:build:watch\"",
		"serve": "php -S 0.0.0.0:8000 -t public/ src/TypeWriter/dev-server.php",
		"typewriter:build": "cross-env NODE_ENV=production webpack --config dev/webpack/typewriter-core-files.js --progress --colors --hide-modules",
		"typewriter:build:watch": "cross-env NODE_ENV=development webpack --config dev/webpack/typewriter-core-files.js --progress --colors --hide-modules --watch",
		"typewriter:clean": "rimraf public/tw/dist"
	},
	"workspaces": [
		"public/app/themes/*"
	],
	"dependencies": {
		"@wordpress/blocks": "latest",
		"@wordpress/block-editor": "latest",
		"@wordpress/components": "latest",
		"@wordpress/compose": "latest",
		"@wordpress/data": "latest",
		"@wordpress/date": "latest",
		"@wordpress/editor": "latest",
		"@wordpress/edit-post": "latest",
		"@wordpress/element": "latest",
		"@wordpress/hooks": "latest",
		"@wordpress/i18n": "latest",
		"@wordpress/plugins": "latest"
	},
	"devDependencies": {
		"@babel/core": "^7.8.4",
		"@babel/plugin-proposal-class-properties": "^7.8.3",
		"@babel/plugin-proposal-decorators": "^7.8.3",
		"@babel/plugin-proposal-json-strings": "^7.8.3",
		"@babel/plugin-syntax-dynamic-import": "^7.8.3",
		"@babel/plugin-syntax-import-meta": "^7.8.3",
		"@babel/plugin-transform-react-jsx": "^7.8.3",
		"@babel/preset-env": "^7.8.4",
		"babel-loader": "^8.0.6",
		"concurrently": "^5.0.2",
		"copy-webpack-plugin": "^5.1.1",
		"cross-env": "^7.0.0",
		"css-loader": "^3.4.2",
		"cssnano": "^4.1.10",
		"cssnano-preset-advanced": "^4.0.7",
		"file-loader": "^5.0.2",
		"mini-css-extract-plugin": "^0.9.0",
		"node-sass": "^4.13.1",
		"optimize-css-assets-webpack-plugin": "^5.0.3",
		"postcss-loader": "^3.0.0",
		"postcss-focus-within": "^3.0.0",
		"rimraf": "^3.0.1",
		"sass-loader": "^8.0.2",
		"terser-webpack-plugin": "^2.3.3",
		"uglify-template-string-loader": "^1.1.1",
		"webpack": "^4.41.5",
		"webpack-cli": "^3.3.10",
		"webpack-merge": "^4.2.2"
	}
}
